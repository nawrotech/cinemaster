{% extends 'base.html.twig' %}

{% block title %}Make reservation for {{ showtime.movieFormat.displayMovieWithFormat }}{% endblock %}

{% block body %}
    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.submit) }}
        {{ form_rest(form) }}
    {{ form_end(form) }}
        <h1>{{ showtime.movieFormat.displayMovieWithFormat }}</h1>
        <p>Date: {{ showtime.startTime|date("D, M Y") }} </p>
        <p>{{ showtime.startTime|date("h:i") }} - {{ showtime.endTime|date("h:i") }}</p>
        {% for roomRow in roomRows %}
            <div class="row">
                <h1 class="col-1">{{ roomRow }}</h1>
                <div class="col-1 d-flex gap-2">
                    {% for seat in seatsInRow[roomRow]  %}             
                        {{ include("partials/_reservation_seat.html.twig") }}
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
   
       

{% endblock %}

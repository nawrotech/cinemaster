{% extends 'base.html.twig' %}

{% block title %}Movie creation happens here!{% endblock %}

{% block stylesheets %}
{{ parent() }}
    <link href=" https://cdn.jsdelivr.net/npm/dropzone@6.0.0-beta.2/dist/dropzone.min.css " rel="stylesheet">
{% endblock %}

{% block body %}
 

    {{ form_start(form) }}
        {{ form(form) }}

        {# {{ dump(form.vars.data.posterFilename) }} #}

        {% if form.vars.data.posterFilename %}
            <figure style="width: 100px">
                <img src="{{ asset(form.vars.data.posterPath, "uploads_url") }}" class="card-img-top" alt="{{ form.vars.data.title ~ "post-image" }}">
                <figcaption>Current image</figcaption>
            </figure>
        {% endif %}
        
    {{ form_end(form) }}

    




{% endblock %}

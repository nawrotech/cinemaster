{% extends 'base.html.twig' %}

{% block title %}Edit Screening Room{% endblock %}

{% block body %}
        <h1>Screening room name: {{ room.name }}</h1>   
        <p><strong>Setup: </strong> {{ room.screeningRoomSetup.displaySetup }}</p>
        <div class="row">
            <div class="col-md-10 mb-3">
                <div class="overflow-auto w-100">
                    {% for groupedSeat in groupedSeats %}
                        <div class="row">
                            <h1 class="col-1">{{loop.index}}</h1>
                            <div class="d-flex col-11 gap-2">
                                {% for seat in groupedSeat  %}
                                    {{ include("screening_room/_screening_room_seat.html.twig") }}
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-2">
                {{form(form)}}
            </div>
        </div>
{% endblock %}
